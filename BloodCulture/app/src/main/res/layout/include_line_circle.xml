<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/button"
        android:layout_width="@dimen/kongsize"
        android:layout_height="@dimen/kongsize"
        android:background="@drawable/button_circle_shape_culture"
        android:text="" />


    <TextView
        android:id="@+id/textViewCulture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/button2"
        android:layout_width="@dimen/kongsize"
        android:layout_height="@dimen/kongsize"
        android:background="@drawable/button_circle_shape_positive"
        android:textAlignment="center"
        android:text="+" />

    <TextView
        android:id="@+id/textViewPositive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" " />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/button3"
        android:layout_width="@dimen/kongsize"
        android:layout_height="@dimen/kongsize"
        android:background="@drawable/button_circle_shape_negative"
        android:textAlignment="center"
        android:text="-" />

    <TextView
        android:id="@+id/textViewNegative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" " />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/button4"
        android:layout_width="@dimen/kongsize"
        android:layout_height="@dimen/kongsize"
        android:background="@drawable/button_circle_shape_anopositive"
        android:textAlignment="center"
        android:text="+" />

    <TextView
        android:id="@+id/textViewAnoPositive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" " />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/button5"
        android:layout_width="@dimen/kongsize"
        android:layout_height="@dimen/kongsize"
        android:background="@drawable/button_circle_shape_anonegative"
        android:textAlignment="center"
        android:text="-" />

    <TextView
        android:id="@+id/textViewAnoNegative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" " />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
</LinearLayout>
